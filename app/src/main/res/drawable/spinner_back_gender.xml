<?xml version="1.0"
    encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="line">
                    <stroke
                        android:width="1dp"
                        android:color="@color/light_gray" />

                    <size android:height="1dp" />

                </shape>
            </item>
            <item android:bottom="20dp" android:right="15dp">
                <bitmap android:gravity="right"
                    android:src="@drawable/drop" />
            </item>

        </layer-list>
    </item>
</selector>